@{
    ViewBag.Title = "Patient Dashboard";
}

<h2>Patient Dashboard</h2>
<div class="card-deck">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">View Past Records</h5>
            <p class="card-text">Medical History.</p>
            <a href="@Url.Action("Treatments", "Patient")" class="btn btn-primary">Check</a>
        </div>
    </div>

<div class="card-deck">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Book Appointment</h5>
            <p class="card-text">Schedule a new appointment with a doctor.</p>
            <a href="@Url.Action("BookAppointment", "Patient")" class="btn btn-primary">Book Appointment</a>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">View Appointment Status</h5>
            <p class="card-text">Check the status of your current appointments.</p>
            <a href="@Url.Action("AppointmentStatus", "Patient")" class="btn btn-success">View Appointment Status</a>
        </div>
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Logout", "Patient")" class="btn btn-danger">Logout</a>
</div>
