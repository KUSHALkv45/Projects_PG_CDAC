@{
    ViewBag.Title = "Doctor Dashboard";
}

<h2>Doctor Dashboard</h2>

<div class="card-deck">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Manage Treatments</h5>
            <p class="card-text">View, add, edit, and delete treatments.</p>
            <a href="@Url.Action("Treatments", "Doctor")" class="btn btn-primary">Manage Treatments</a>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">View Schedule</h5>
            <p class="card-text">Check your daily schedule and availability.</p>
            <a href="@Url.Action("ViewSchedule", "Doctor")" class="btn btn-primary">View Schedule</a>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Add Treatment</h5>
            <p class="card-text">Record a new treatment for a patient.</p>
            <a href="@Url.Action("AddTreatment", "Doctor")" class="btn btn-success">Add Treatment</a>
        </div>
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Logout", "Doctor")" class="btn btn-danger">Logout</a>
</div>
