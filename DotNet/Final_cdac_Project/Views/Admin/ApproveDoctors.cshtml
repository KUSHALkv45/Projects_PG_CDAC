@model IEnumerable<FinalProjectAtt3.Models.Doctor>

@{
    ViewBag.Title = "Approve Doctors";
}

<h2>Approve Doctors</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Specialty</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.FirstName @doctor.LastName</td>
                <td>@doctor.Email</td>
                <td>@doctor.Specialty</td>
                <td>
                    <form asp-action="ApproveDoctor" method="post">
                        <input type="hidden" name="doctorId" value="@doctor.DoctorId" />
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a href="@Url.Action("Logout", "Admin")" class="btn btn-danger">Logout</a>
</div>