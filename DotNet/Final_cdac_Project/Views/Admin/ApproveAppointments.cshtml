@model IEnumerable<FinalProjectAtt3.Models.Appointment>

@{
    ViewBag.Title = "Approve Appointments";
}

<h2>Approve Appointments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Appointment Date</th>
            <th>Slot</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Patient.FirstName @appointment.Patient.LastName</td>
                <td>@appointment.Doctor.FirstName @appointment.Doctor.LastName</td>
                <td>@appointment.DoctorScheduleDate.ToShortDateString()</td>
                <td>@appointment.SlotBooked</td>
                <td>
                    <form asp-action="ApproveAppointment" method="post">
                        <input type="hidden" name="appointmentId" value="@appointment.AppointmentId" />
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-3">
    <a href="@Url.Action("Logout", "Admin")" class="btn btn-danger">Logout</a>
</div>
